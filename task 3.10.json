import { Zap, Facebook, Twitter, Instagram, Youtube, Linkedin } from 'lucide-react';

export default function Footer() {
  const footerSections = [
    {
      title: 'Vehicles',
      links: ['Model S', 'Model 3', 'Model X', 'Model Y', 'Cybertruck', 'Roadster']
    },
    {
      title: 'Energy',
      links: ['Solar Panels', 'Solar Roof', 'Powerwall', 'Megapack', 'Supercharger']
    },
    {
      title: 'Charging',
      links: ['Home Charging', 'Supercharging', 'Destination Charging', 'Trip Planner']
    },
    {
      title: 'Support',
      links: ['Contact Us', 'Service Centers', 'User Guides', 'Warranty', 'Software Updates']
    },
    {
      title: 'Company',
      links: ['About', 'Careers', 'Investor Relations', 'News', 'Locations']
    }
  ];

  const socialLinks = [
    { icon: <Facebook className="h-5 w-5" />, href: '#', label: 'Facebook' },
    { icon: <Twitter className="h-5 w-5" />, href: '#', label: 'Twitter' },
    { icon: <Instagram className="h-5 w-5" />, href: '#', label: 'Instagram' },
    { icon: <Youtube className="h-5 w-5" />, href: '#', label: 'YouTube' },
    { icon: <Linkedin className="h-5 w-5" />, href: '#', label: 'LinkedIn' }
  ];

  return (
    <footer className="bg-gray-900 text-white">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        {/* Main Footer Content */}
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-8 mb-12">
          {/* Brand */}
          <div className="lg:col-span-1">
            <div className="flex items-center space-x-2 mb-4">
              <Zap className="h-8 w-8 text-red-500" />
              <span className="text-2xl font-bold font-space-grotesk">TESLA</span>
            </div>
            <p className="text-gray-400 text-sm leading-relaxed mb-6">
              Accelerating the world's transition to sustainable energy through innovation and design.
            </p>
            
            {/* Social Links */}
            <div className="flex space-x-4">
              {socialLinks.map((social) => (
                <a
                  key={social.label}
                  href={social.href}
                  className="text-gray-400 hover:text-white transition-colors p-2 rounded-full hover:bg-gray-800"
                  aria-label={social.label}
                >
                  {social.icon}
                </a>
              ))}
            </div>
          </div>

          {/* Footer Sections */}
          {footerSections.map((section) => (
            <div key={section.title}>
              <h3 className="text-lg font-semibold font-space-grotesk mb-4">{section.title}</h3>
              <ul className="space-y-2">
                {section.links.map((link) => (
                  <li key={link}>
                    <a
                      href="#"
                      className="text-gray-400 hover:text-white transition-colors text-sm"
                    >
                      {link}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>

        {/* Divider */}
        <div className="border-t border-gray-800 pt-8">
          <div className="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
            <div className="flex flex-wrap items-center space-x-6 text-sm text-gray-400">
              <a href="#" className="hover:text-white transition-colors">Privacy Policy</a>
              <a href="#" className="hover:text-white transition-colors">Terms of Service</a>
              <a href="#" className="hover:text-white transition-colors">Cookie Policy</a>
              <a href="#" className="hover:text-white transition-colors">Accessibility</a>
            </div>
            <p className="text-sm text-gray-400">
              Â© 2024 Tesla, Inc. All rights reserved.
            </p>
          </div>
        </div>
      </div>
    </footer>
  );
}